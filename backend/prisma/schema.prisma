// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String?  @unique
  email     String?  @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  playlists Playlist[]
  magicTokens MagicToken[]
  passwordResetTokens PasswordResetToken[]
}

model Song {
  id          String   @id @default(uuid())
  title       String
  artist      String?
  youtubeId   String   @unique // Global songs, no duplicates by youtubeId
  thumbnailUrl String?
  duration    Int?     // Duration in seconds
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  playlistSongs PlaylistSong[]
}

model Playlist {
  id          String   @id @default(uuid())
  name        String
  description String?
  sourceUrl   String?  // URL of the original YouTube or Spotify playlist
  sourceType  String?  // 'youtube', 'spotify', or null for manual playlists
  autoUpdate  Boolean  @default(false) // Whether to periodically refetch from source
  lastSyncedAt DateTime? // When the playlist was last refreshed from source
  expectedSongCount Int? // Expected number of songs during import (null when complete)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  playlistSongs PlaylistSong[]
}

model PlaylistSong {
  id         String   @id @default(uuid())
  position   Int      @default(0)
  createdAt  DateTime @default(now())

  playlistId String
  playlist   Playlist @relation(fields: [playlistId], references: [id], onDelete: Cascade)

  songId     String
  song       Song     @relation(fields: [songId], references: [id], onDelete: Cascade)

  @@unique([playlistId, songId])
  @@index([playlistId, position])
}

model MagicToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  username  String?  // For registration tokens
  email     String?  // For email-only registration tokens
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([token])
  @@index([expiresAt])
  @@index([username])
  @@index([email])
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([token])
  @@index([expiresAt])
  @@index([userId])
}

// Session table for connect-pg-simple (managed by express-session)
// This table is created via migration to persist across rebuilds
model Session {
  sid    String   @id
  sess   Json     @db.JsonB
  expire DateTime @db.Timestamp(6)

  @@map("session")
  @@index([expire])
}

model HomePageFeed {
  id         String   @id @default(uuid())
  genre      String
  tagline    String?
  sourceType String?  // 'youtube' or 'spotify'
  playlistUrl String? // Original playlist URL for refreshing
  songs      Json     @db.JsonB // Array of song IDs
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([genre])
  @@index([genre])
}
